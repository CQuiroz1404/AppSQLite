<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_gradient_background"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✏️ Editar Producto"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roland_variable_full"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifica la información del producto"
                android:textSize="14sp"
                android:textColor="#FFEBEE"
                android:fontFamily="@font/roland_variable_full"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Card de formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Imagen del producto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imagen del Producto"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"
                    android:fontFamily="@font/roland_variable_full"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivImagenProducto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/background_card"
                        android:contentDescription="Imagen del producto"/>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSeleccionarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cambiar Imagen"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roland_variable_full"
                    android:backgroundTint="@color/red_primary"
                    app:cornerRadius="20dp"
                    android:layout_marginBottom="24dp"
                    android:paddingHorizontal="24dp"/>

                <!-- Información del producto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información del Producto"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"
                    android:fontFamily="@font/roland_variable_full"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Producto *"
                    app:boxStrokeColor="@color/red_primary"
                    app:hintTextColor="@color/red_primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roland_variable_full"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción"
                    app:boxStrokeColor="@color/red_primary"
                    app:hintTextColor="@color/red_primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcionProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roland_variable_full"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio * ($)"
                    app:boxStrokeColor="@color/red_primary"
                    app:hintTextColor="@color/red_primary"
                    app:prefixText="$ "
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrecioProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roland_variable_full"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botones de acción -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Actualizar Producto"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/success_green"
                    android:fontFamily="@font/roland_variable_full"
                    app:cornerRadius="28dp"
                    app:elevation="6dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Eliminar Producto"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/error_red"
                    android:fontFamily="@font/roland_variable_full"
                    app:cornerRadius="28dp"
                    app:elevation="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
