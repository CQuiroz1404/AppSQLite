<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light_gray"
        android:fitsSystemWindows="true">

        <!-- Barra superior mejorada con gradiente (FIJA) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_gradient_background"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:elevation="8dp">

            <!-- Fila del menú y título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Boton de opciones -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="@string/menu_options_description"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:padding="10dp"/>

                <!-- Texto de Bienvenida -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/menu_welcome_title"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roland_variable_full"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <!-- NUEVA: Barra de búsqueda con márgenes -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/red_primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBuscarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar productos..."
                    android:inputType="text"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- NUEVA: Filtro de categorías -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTodas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todas"
                        android:checked="true"
                        android:fontFamily="@font/roland_variable_full"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeWidth="6dp"
                        app:chipStrokeColor="@color/chip_stroke_selector"/>
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Contenedor de productos con scroll independiente -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/containerProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Menú lateral  -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp"
        android:fitsSystemWindows="true">

        <!-- Header del menú con gradiente  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@drawable/red_gradient_background"
            android:padding="20dp"
            android:gravity="center">

            <!-- Icono de engranaje con fondo circular blanco -->
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/red_primary"
                    android:contentDescription="@string/menu_logo_description"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_nav_header_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roland_variable_full"
                android:maxLines="2"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- Opciones del menú -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <Button
                    android:id="@+id/btnNavCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/menu_nav_my_account"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    app:icon="@android:drawable/ic_menu_myplaces"
                    app:iconTint="@color/red_primary"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <Button
                    android:id="@+id/btnNavAgregarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/menu_nav_add_product"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/red_primary"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <Button
                    android:id="@+id/btnNavMisProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/menu_nav_my_products"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconTint="@color/red_primary"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnNavCerrarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/menu_nav_logout"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roland_variable_full"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
