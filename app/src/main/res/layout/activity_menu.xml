<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra superior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D32F2F"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:fitsSystemWindows="true">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="Menú de Opciones"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@android:color/white"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Bienvenido al E-commerce"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp" />

            </LinearLayout>

            <!-- Contenedor de productos dinámico -->
            <LinearLayout
                android:id="@+id/containerProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Menú lateral -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#D32F2F"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menú de Opciones"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:background="#990C0C" />

        <Button
            android:id="@+id/btnNavCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi Cuenta"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnNavAgregarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Producto"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnNavCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
