<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra superior mejorada con gradiente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_gradient_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:elevation="8dp"
                android:fitsSystemWindows="true">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="Menú de Opciones"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Bienvenido al E-commerce"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roland_variable_full"
                    android:paddingStart="8dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

                <Space
                    android:layout_width="48dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Contenedor de productos dinámico con padding mejorado -->
            <LinearLayout
                android:id="@+id/containerProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Menú lateral mejorado -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp"
        android:fitsSystemWindows="true">

        <!-- Header del menú con gradiente más compacto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/red_gradient_background"
            android:padding="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="@color/white"
                android:layout_marginBottom="8dp"
                android:contentDescription="Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú de Opciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roland_variable_full"/>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- Opciones del menú mejoradas -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <Button
                    android:id="@+id/btnNavCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Mi Cuenta"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <Button
                    android:id="@+id/btnNavAgregarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Agregar Producto"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <Button
                    android:id="@+id/btnNavMisProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Mis Productos"
                    android:textSize="15sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roland_variable_full"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnNavCerrarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Cerrar Sesión"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roland_variable_full"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
